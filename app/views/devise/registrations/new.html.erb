<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field mt-3">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: "Your email address" %>
  </div>

  <div class="field mt-3">
    <%= f.text_field :firstname, class: 'form-control', placeholder: "First Name" %>
  </div>

  <div class="field mt-3">
    <%= f.text_field :lastname, class: 'form-control', placeholder: "Last Name" %>
  </div>

  <div class="field mt-3">
    <%= f.text_area :description, class: 'form-control', placeholder: "Tell us about yourself" %>
  </div>

  <div class="field mt-3">
    <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: "Password (6 characters minimum)" %>
  </div>

  <div class="field mt-3">
    <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: "Confirm your password" %>
  </div>

  <div class="actions mt-3">
    <%= f.submit "Sign up", class: 'btn btn-primary' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
